{
  "name": "typescript-library-starter",
  "version": "1.0.0",
  "description": "Typescript library starter supports dual es module / commonjs",
  "keywords": [
    "es modules",
    "typescript library"
  ],
  "license": "BSD-2-Clause",
  "author": "Kris Selden <kris.selden@gmail.com>",
  "files": [
    "src",
    "dist",
    "!dist/**/*.d.ts.map",
    "docs"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/typescript-library-starter.d.ts",
  "scripts": {
    "docs": "api-extractor run --typescript-compiler-folder ./node_modules/typescript && api-documenter markdown -i ./temp -o ./docs",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint .",
    "lint:tsc-src": "tsc --noEmit",
    "lint:tsc-tests": "tsc -p test --noEmit",
    "prepack": "yarn docs",
    "prepare": "tsc && rollup -c rollup.config.js",
    "test": "npm-run-all lint test:coverage",
    "test:coverage": "c8 mocha",
    "start": "serve"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.7.18",
    "@microsoft/api-extractor": "^7.7.13",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@types/node-forge": "^0.9.3",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "c8": "^7.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "mocha": "^7.1.1",
    "node-forge": "^0.9.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "rollup": "^2.6.1",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "serve": "^11.3.0",
    "typescript": "^3.8.3"
  },
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "engines": {
    "node": ">= 12.*"
  },
  "mocha": {
    "spec": "test/**/*test.js"
  },
  "volta": {
    "node": "13.13.0",
    "yarn": "1.22.0"
  }
}
